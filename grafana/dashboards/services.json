{
  "title": "Sentinel Services",
  "uid": "sentinel-services",
  "panels": [
    {
      "title": "Response Time Heatmap",
      "type": "heatmap",
      "gridPos": { "h": 12, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(sentinel_service_response_seconds_bucket[5m])) by (le)",
          "format": "heatmap"
        }
      ]
    },
    {
      "title": "Request Rate",
      "type": "timeseries",
      "gridPos": { "h": 12, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "rate(sentinel_http_requests_total[5m])",
          "legendFormat": "{{method}} {{path}}"
        }
      ]
    },
    {
        "title": "Service Health Status",
        "type": "state-timeline",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 },
        "targets": [
            {
                "expr": "sentinel_service_health",
                "legendFormat": "{{service}}"
            }
        ]
    }
  ]
}
