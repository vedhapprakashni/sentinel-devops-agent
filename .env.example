# ============================================
# CHATOPS INTEGRATIONS
# ============================================
# Configure webhooks to receive real-time Sentinel DevOps Agent alerts
# You can leave these blank and configure them via the Sentinel Dashboard Settings UI
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# ============================================
# NOTIFICATION EVENT PREFERENCES
# ============================================
# 'false' will explicitly disable webchecks for the event, any other string assumes 'true'
NOTIFY_ON_INCIDENT=true
NOTIFY_ON_HEALING=true
